<h1>Flats</h1>

<p> All <%= Flat.count %> flats </p>
<button type="button" class="btn btn-outline-primary"><% link_to "Add a flat", new_flat_path %></button>
<div class="container">
  <% @flats.each do |flat| %>
  <div class="card">
    <p><%= flat.name %></p>
    <p><%= flat.address %></p>
    <p><%= flat.description %></p>
    <div class="flat-info">
      <div class="price">
        <p><i class="fas fa-euro-sign"></i><%= flat.price_per_night %></p>
      </div>
      <div class="guests">
        <p><i class="fas fa-user-friends"></i><%= flat.number_of_guests %></p>
      </div>
      <%= link_to "More info", flat_path(flat) %>
    </div>
  </div>

  <% end %>
</div>

